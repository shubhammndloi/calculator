def calculator ():
    a = int(input("enter first number ="))
    operator = input("operator (-,+,/,*)=")
    b = int(input("enter second number ="))
    if operator == "+":
        return a+b
    elif operator == "-":
        return a-b
    elif operator == "*":
        return a*b
    elif operator == "/":
        return a/b
    else :
        return("invalid operator")
result = calculator()
print (result)
