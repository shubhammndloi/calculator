def calculator ():
    a = int(input("enter first number ="))
    operator = input("operator (-,+,/,*)=")
    b = int(input("enter second number ="))
    if operator == "+":
        return a+b
    elif operator == "-":
        return a-b
    elif operator == "*":
        return a*b
    elif operator == "/":
        if b!=0:
            return a/b
        else:
            print("please enter a valid value")
    else :
        return("invalid value")
result = calculator()
print (result)
